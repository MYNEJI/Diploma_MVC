<div class="container my-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-white text-center py-4">
            <h2>Schedule List</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                @foreach (var classroom in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 shadow border-0">
                            <div class="card-body text-center d-flex flex-column">
                                <h5 class="card-title mb-3">@classroom.RoomName</h5>
                                <form asp-action="ScheduleList" method="get" class="mt-auto">
                                    <input type="hidden" name="id" value="@classroom.Id" />
                                    <button type="submit" class="btn btn-primary w-100">View Schedule</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
