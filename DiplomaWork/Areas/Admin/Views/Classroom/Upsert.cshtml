@model Classroom

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id!=0?"Update":"Create") Classroom</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <form method="post" class="row justify-content-center" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="border p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="RoomName" class="form-control border-0 shadow" />
                        <label asp-for="RoomName" class="ms-2"></label>
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Classroom" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}