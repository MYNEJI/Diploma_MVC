@model SubjectVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Subject.Id!=0?"Update":"Create") Subject</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Subject.Id" hidden />
            <input asp-for="Subject.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.Title" class="form-control border-0 shadow" />
                            <label asp-for="Subject.Title" class="ms-2"></label>
                            <span asp-validation-for="Subject.Title" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="Subject.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Subject.Description" class="form-control border-0 shadow"></textarea>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="Subject.ISBN" class="ms-2"></label>
                            <span asp-validation-for="Subject.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Subject.ListPrice" class="ms-2"></label>
                            <span asp-validation-for="Subject.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.Price" class="form-control border-0 shadow" />
                            <label asp-for="Subject.Price" class="ms-2"></label>
                            <span asp-validation-for="Subject.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.Price50" class="form-control border-0 shadow" />
                            <label asp-for="Subject.Price50" class="ms-2"></label>
                            <span asp-validation-for="Subject.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Subject.Price100" class="form-control border-0 shadow" />
                            <label asp-for="Subject.Price100" class="ms-2"></label>
                            <span asp-validation-for="Subject.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Subject.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Subject.CategoryId" class="ms-2"></label>
                            <span asp-validation-for="Subject.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Subject.ImageUrl" class="ms-2"></label>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Subject.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Subject" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Subject.ImageUrl" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}